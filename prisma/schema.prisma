generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Text {
  id         String   @id @default(uuid())
  content    String
  category   String
  difficulty String 
  language   String   @default("en")
  createdAt  DateTime @default(now())
}